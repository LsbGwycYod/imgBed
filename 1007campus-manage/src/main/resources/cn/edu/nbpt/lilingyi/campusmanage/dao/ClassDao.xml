<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.nbpt.lilingyi.campusmanage.dao.ClassDao">
    <select id="selectById" resultType="cn.edu.nbpt.lilingyi.campusmanage.pojo.entity.ClassStudent">
        select * from class where id=#{id}
    </select>
    <insert id="insert" parameterType="cn.edu.nbpt.lilingyi.campusmanage.pojo.entity.ClassStudent">
        insert into class (name,code)
        values (#{name},#{code})
    </insert>
    <delete id="deleteById">
        delete from class where id=#{id}
    </delete>
    <update id="update" parameterType="cn.edu.nbpt.lilingyi.campusmanage.pojo.entity.ClassStudent">
        update class
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="code != null">code=#{code},</if>
        </set>
        where id=#{id}
    </update>
</mapper>